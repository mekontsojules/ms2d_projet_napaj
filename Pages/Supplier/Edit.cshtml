@page
@model Ms2dNapaj.Pages.Supplier.EditModel
@{
}



<div class="page-wrapper">
    <div class="page-content">
        <div class="page-breadcrumb d-none d-sm-flex align-items-center mb-3">
            <div class="breadcrumb-title pe-3">Fournisseur</div>
            <div class="ps-3">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb mb-0 p-0">
                        <li class="breadcrumb-item">
                            <a asp-page="./Index"><i class="bx bx-home-alt"></i></a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Mise a jours</li>
                    </ol>
                </nav>
            </div>
        </div>

        <h1>Mise a jour du fournisseur <strong>@Model.fournisseur.Name</strong> </h1>

        <form method="post">
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group" hidden>
                        <input asp-for="fournisseur.Id" hidden class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="fournisseur.Name"></label>
                        <input asp-for="fournisseur.Name" class="form-control" />
                        <span asp-validation-for="fournisseur.Name" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary">Mettre à jour</button>
                </div>
            </div>
        </form>
    </div>
</div>